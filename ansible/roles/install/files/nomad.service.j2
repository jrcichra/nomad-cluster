[Unit]
Description=Nomad
Documentation=https://www.nomadproject.io/docs/index.html
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/usr/bin/nomad agent -config=/etc/nomad.d/nomad.hcl
Restart=always
KillMode=process
RestartSec=5
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
